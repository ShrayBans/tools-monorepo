{
  "name": "@shray/edge-api",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "sh sync-infisical.sh && wrangler dev --port 8790 --minify=false",
    "dev:prod": "sh sync-infisical.sh prod && wrangler dev --port 8790 --minify=false",
    "dev:node": "tsx watch dev-server.ts",
    "build": "tsc --noEmit",
    "type-check:ci": "tsc --incremental --noEmit",
    "type-check": "tsgo --incremental --noEmit",
    "clean": "rm -rf .vercel dist .wrangler",
    "lint": "echo 'No linting configured for edge-api'",
    "demo": "tsx src/scripts/demo.ts",
    "=========BUNDLE SIZE DEBUG=========": "echo 'BUNDLE SIZE DEBUG'",
    "bundle-check": "node scripts/bundle-analyzer.js",
    "bundle-check:warning": "node scripts/bundle-analyzer.js || echo 'Bundle warnings detected but deployment continues'",
    "check-startup": "wrangler check startup",
    "=========DEPLOY=========": "echo 'DEPLOY'",
    "predeploy": "npm run bundle-check",
    "deploy": "wrangler deploy --outdir dist --upload-source-maps --var SENTRY_RELEASE:$(sentry-cli releases propose-version)",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "deploy:force": "wrangler deploy --env production",
    "cf:tail": "wrangler tail",
    "cf:logs": "wrangler tail --format=pretty",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:introspect": "drizzle-kit introspect",
    "sentry:sourcemaps": "_SENTRY_RELEASE=$(sentry-cli releases propose-version) && sentry-cli releases new $_SENTRY_RELEASE --org=shraylabs --project=shray-internal-edge-api && sentry-cli sourcemaps upload --org=shraylabs --project=shray-internal-edge-api --release=$_SENTRY_RELEASE --strip-prefix 'dist/..' dist",
    "postdeploy": "pnpm sentry:sourcemaps"
  },
  "dependencies": {
    "@shray/apiutils": "workspace:*",
    "@shray/crossutils": "workspace:*",
    "@shray/env": "workspace:*",
    "@shray/shared": "workspace:*",
    "@hono/trpc-server": "0.3.4",
    "@sentry/cloudflare": "^9.40.0",
    "@supabase/supabase-js": "^2.38.4",
    "@t3-oss/env-nextjs": "^0.13.6",
    "@trpc/server": "10.45.2",
    "@upstash/qstash": "^2.8.1",
    "aws4fetch": "^1.0.20",
    "bluebird": "^3.7.2",
    "cheerio": "^1.1.2",
    "cron-parser": "^4.9.0",
    "dayjs": "1.11.13",
    "drizzle-orm": "0.44.2",
    "hono": "4.7.10",
    "js-cookie": "3.0.5",
    "lodash-es": "4.17.21",
    "nanoid": "3.3.4",
    "postgres": "^3.4.3",
    "qs": "6.11.2",
    "superjson": "1.13.1",
    "toucan-js": "^4.1.1",
    "uuid": "11.1.0",
    "yahoo-finance2": "^2.13.3",
    "zod": "^3.25.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250610.0",
    "@hono/node-server": "1.8.2",
    "@sentry/cli": "^2.50.0",
    "@types/node": "20.0.0",
    "@vercel/node": "3.0.0",
    "drizzle-kit": "0.31.1",
    "tsx": "4.7.0",
    "typescript": "5.0.0",
    "wrangler": "^4.19.2"
  }
}
