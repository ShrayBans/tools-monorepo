{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "off",
				"useExhaustiveDependencies": "warn",
				"noEmptyPattern": "warn",
				"noUnusedImports": "warn"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"a11y": {
				"useMediaCaption": "off",
				"useValidAnchor": "off",
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useAltText": "off"
			},
			"suspicious": {
				"noDoubleEquals": "warn",
				"noArrayIndexKey": "off",
				"noImplicitAnyLet": "off",
				"noAssignInExpressions": "off",
				"noExplicitAny": "warn"
			},
			"style": {
				"useConst": "off",
				"useSingleVarDeclarator": "off",
				"useNodejsImportProtocol": "off",
				"useImportType": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	}
}
